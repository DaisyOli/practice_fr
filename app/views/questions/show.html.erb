<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="card shadow-lg p-4 w-100" style="max-width: 1100px;">
    <div class="card-body">
      <!-- Cabeçalho do Dashboard -->
      <div class="text-center mb-4">
        <h1>Bem-vindo, professor!</h1>
        <p>Este é o seu dashboard.</p>
        <%= link_to "Adicionar Nova Atividade", new_activity_path, class: "btn btn-primary btn-lg" %>
      </div>

      <!-- Lista de Atividades -->
      <div>
        <h2>Suas Atividades</h2>
        <% if current_user.activities.any? %>
          <table class="table table-hover mt-3">
            <thead class="table-light">
              <tr>
                <th>Título</th>
                <th>Descrição</th>
                <th>Nível</th>
                <th>Tipo de Conteúdo</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% current_user.activities.each do |activity| %>
                <tr>
                  <td><%= activity.title %></td>
                  <td><%= truncate(activity.description, length: 50) %></td>
                  <td><%= activity.level %></td>
                  <td><%= activity.content_type.capitalize %></td>
                  <td>
                    <%= link_to "Ver", activity_path(activity), class: "btn btn-info btn-sm" %>
                    <%= link_to "Editar", edit_activity_path(activity), class: "btn btn-warning btn-sm" %>
                    <%= link_to "Excluir", activity_path(activity), method: :delete, data: { confirm: "Tem certeza que deseja excluir esta atividade?" }, class: "btn btn-danger btn-sm" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p class="text-muted">Você ainda não tem atividades. Comece adicionando uma acima!</p>
        <% end %>
      </div>
    
    </div>
  </div>
</div>
