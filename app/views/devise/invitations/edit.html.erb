<div class="container d-flex justify-content-center align-items-center py-5">
  <div class="card shadow-lg" style="width: 100%; max-width: 450px; border: none; border-radius: 12px; overflow: hidden;">
    <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #002395 0%, #00337f 100%); border-bottom: 5px solid #002395;">
      <h4 class="mb-0 fw-light"><%= t "devise.invitations.edit.header" %></h4>
      <div class="mt-2" style="font-size: 0.9rem; opacity: 0.9;">Découvrez la beauté de la langue française</div>
    </div>

    <div class="card-body p-4">
      <div class="text-center mb-4">
        <div style="font-size: 40px;">🇫🇷</div>
        <h5 class="mt-2">Bienvenue à Practice FR</h5>
        <p class="text-muted small">Finalisez votre inscription pour commencer votre voyage en français</p>
      </div>

      <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, class: 'needs-validation' }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :invitation_token, readonly: true %>

        <% if f.object.class.require_password_on_accepting %>
          <div class="mb-3">
            <%= f.label :password, "Mot de passe", class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-lock"></i></span>
              <%= f.password_field :password, class: "form-control", placeholder: "Entrez votre mot de passe" %>
            </div>
            <div class="form-text">Au moins 6 caractères</div>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirmation du mot de passe", class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirmez votre mot de passe" %>
            </div>
          </div>
        <% end %>

        <div class="d-grid mt-4">
          <%= f.submit t("devise.invitations.edit.submit_button"), class: "btn btn-lg", style: "background-color: #002395; color: white; border: none;" %>
        </div>
      <% end %>

      <div class="text-center mt-4">
        <div class="cultural-elements my-3">
          <span style="font-size: 20px;" title="Tour Eiffel">🗼</span>
          <span style="font-size: 20px;" title="Croissant">🥐</span>
          <span style="font-size: 20px;" title="Arts">🎭</span>
          <span style="font-size: 20px;" title="Cuisine">🍷</span>
          <span style="font-size: 20px;" title="Littérature">📚</span>
        </div>
        <%= link_to t('common.back'), root_path, class: "text-decoration-none", style: "color: #002395;" %>
      </div>
    </div>
  </div>
</div>

<style>
  body {
    background-color: #f9f9f9;
  }
</style>
