<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow-lg p-4" style="width: 100%; max-width: 500px; border: none; border-radius: 15px;">
    <div class="text-center mb-4">
      <div style="background-color: #002654; color: white; padding: 20px; border-radius: 10px 10px 0 0; margin: -24px -24px 20px -24px;">
        <div class="d-flex justify-content-center mb-2">
          <div style="width: 30px; height: 30px; background-color: #002654;"></div>
          <div style="width: 30px; height: 30px; background-color: white;"></div>
          <div style="width: 30px; height: 30px; background-color: #ED2939;"></div>
        </div>
        <h2 class="mb-2"><%= t "devise.invitations.new.header" %></h2>
        <div class="mt-2" style="font-size: 0.9rem; opacity: 0.9;">Découvrez la beauté de la langue française</div>
      </div>
    </div>

    <div class="card-body pt-0">
      <div class="mb-4 text-center" style="color: #555;">
        <p>Invitez des élèves ou des collègues à rejoindre votre plateforme d'apprentissage du français</p>
      </div>

      <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post, class: 'needs-validation' }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <% resource.class.invite_key_fields.each do |field| -%>
          <div class="mb-3">
            <%= f.label field, class: "form-label fw-bold" %><br />
            <%= f.text_field field, class: "form-control form-control-lg", placeholder: "Enter #{field}", style: "border-radius: 10px; border: 1px solid #ddd;" %>
          </div>
        <% end -%>

        <div class="mb-4">
          <%= f.label :role, class: "form-label fw-bold" %>
          <%= f.select :role, [['Professeur', 'teacher'], ['Étudiant', 'student']], { include_blank: 'Sélectionner un rôle' }, { class: "form-select form-select-lg", style: "border-radius: 10px; border: 1px solid #ddd;" } %>
        </div>

        <div class="d-grid mb-3">
          <%= f.submit t("devise.invitations.new.submit_button"), class: "btn btn-primary btn-lg", style: "background-color: #002654; border: none; border-radius: 10px; padding: 12px; font-weight: bold;" %>
        </div>
      <% end %>

      <div class="mt-3 text-center">
        <%= link_to t('common.back'), :back, class: "text-decoration-none", style: "color: #002654; font-weight: bold;" %>
      </div>
    </div>
  </div>
</div>
