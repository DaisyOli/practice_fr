<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px;">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">Sign Up</h2>

      <!-- Formulário de Sign Up -->
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation' }) do |f| %>
        <!-- Campo de Email -->
        <div class="mb-3">
          <%= f.input :email, required: true, autofocus: true, autocomplete: "email", 
                      label: "Email", input_html: { class: "form-control", placeholder: "Enter your email" } %>
        </div>

        <!-- Campo de Senha -->
        <div class="mb-3">
          <%= f.input :password, required: true, autocomplete: "new-password", 
                      label: "Password", hint: (@minimum_password_length ? "#{@minimum_password_length} characters minimum" : nil), 
                      input_html: { class: "form-control", placeholder: "Enter your password" } %>
        </div>

        <!-- Campo de Confirmação de Senha -->
        <div class="mb-3">
          <%= f.input :password_confirmation, required: true, autocomplete: "new-password", 
                      label: "Password Confirmation", input_html: { class: "form-control", placeholder: "Confirm your password" } %>
        </div>

        <!-- Campo de Role -->
        <div class="mb-3">
          <%= f.input :role, collection: User::ROLES, as: :select, include_blank: "Select Role", 
                      label: "Role", input_html: { class: "form-select" } %>
        </div>

        <!-- Botão de Sign Up -->
        <div class="d-grid">
          <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <!-- Links adicionais -->
      <div class="mt-3 text-center">
        <%= link_to "Log in", new_session_path(resource_name), class: "text-decoration-none" %> |
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-decoration-none" %>
      </div>
    </div>
  </div>
</div>
